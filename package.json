{
  "name": "@slicr97/partialize",
  "version": "0.0.1",
  "description": "Simple input validation",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "prepublish": "rm -rf dist && npx tsc",
    "build": "rm -rf dist && npx tsc",
    "test": "mocha",
    "cover": "nyc mocha",
    "lint": "eslint . --ext .ts --ext .tsx",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.{ts,tsx}' --write",
    "prepare": "husky install",
    "pre-commit": "lint-staged"
  },
  "repository": "git@github.com:SlicR97/partialize.git",
  "author": "Nico Loos",
  "license": "MIT",
  "private": false,
  "devDependencies": {
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^17.0.30",
    "@typescript-eslint/eslint-plugin": "^5.59.7",
    "@typescript-eslint/parser": "^5.59.7",
    "chai": "^4.3.7",
    "eslint": "^8.41.0",
    "husky": "^8.0.0",
    "jest": "^28.0.3",
    "lint-staged": "^13.2.2",
    "mocha": "^10.2.0",
    "nyc": "^15.1.0",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  },
  "lint-staged": {
    "**/*.ts": [
      "yarn lint",
      "yarn prettier-format"
    ]
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "check-coverage": true,
    "all": true,
    "include": [
      "src/**/!(*.test.*).ts"
    ],
    "reporter": [
      "html",
      "text"
    ],
    "report-dir": "coverage"
  }
}
